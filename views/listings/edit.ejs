<%layout('layouts/boilerplate')%>
<body>
<div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>you are on edit this page</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
             <input name="title" type="text" value="<%=listing.title%>" class="form-control" required>
        </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" required><%=listing.description%></textarea>
        </div>
        <div class="mt-3">
            <p>orginal Image:</p>
            <img src="<%=originalImage%>" alt="no image found">
        </div>
        
        <div>
            <label for="image" class="form-label">upload new Image:</label>
             <input name="image"type="file" value="<%=listing.image%>" class="form-control" required>
        </div>
       
        <div>
            <label for="price" class="form-label">Price</label>
            <input name="price"type="number" value="<%=listing.price%>"class="form-control" required>
        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input name="location"type="text" value="<%=listing.location%>"class="form-control" required>
        </div>
        
        <div>
            <label for="country" class="form-label">Country</label>
            <input name="country"type="text" value="<%=listing.country%>"class="form-control"required>
        </div>
        
        <br>
        <br>
        <button class="btn btn-dark edit-btn">Update Listing</button>
        
    </form>
    </div>
</div>
</body>
